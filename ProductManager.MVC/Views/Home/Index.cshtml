@model ProductManager.MVC.Models.PageResult<ProductManager.MVC.Models.ProductDto>

@{
    ViewData["Title"] = "Products";

    var pageNumber = Model?.PageNumber ?? 1;
    var pageSize = Model?.PageSize ?? 10;
    var sortColumn = Model?.SortColumn ?? "Name";
    var sortDirection = Model?.SortDirection ?? "asc";

    var filterName = Context.Request.Query["name"].ToString();
    var filterDescription = Context.Request.Query["description"].ToString();
    var filterIsActive = Context.Request.Query["isActive"].ToString();
    var filterIsDeleted = Context.Request.Query["isDeleted"].ToString();
    var filterMinQuantity = Context.Request.Query["minQuantity"].ToString();
    var filterMaxQuantity = Context.Request.Query["maxQuantity"].ToString();
    var filterMinPrice = Context.Request.Query["minPrice"].ToString();
    var filterMaxPrice = Context.Request.Query["maxPrice"].ToString();
}

<div class="d-flex justify-content-between mb-3">
    <button type="button" class="btn btn-primary openPopup" data-modalmode="create">
        Create
    </button>

    <div class="d-flex gap-2 align-items-center">
        <form method="get" class="d-flex align-items-center">
            <input type="hidden" name="pageNumber" value="1" />
            <input type="hidden" name="sortColumn" value="@sortColumn" />
            <input type="hidden" name="sortDirection" value="@sortDirection" />
            <label class="mb-0 me-1">Show</label>
            <select name="pageSize" id="pageSizeSelect" class="form-select form-select-sm">
                <option value="5" selected='@(pageSize == 5 ? "selected" : null)'>5</option>
                <option value="10" selected='@(pageSize == 10 ? "selected" : null)'>10</option>
                <option value="25" selected='@(pageSize == 25 ? "selected" : null)'>25</option>
                <option value="50" selected='@(pageSize == 50 ? "selected" : null)'>50</option>
            </select>
        </form>
    </div>
</div>

<form method="get" class="mb-3">
    <input type="hidden" name="pageNumber" value="1" />
    <input type="hidden" name="pageSize" value="@pageSize" />
    <input type="hidden" name="sortColumn" value="@sortColumn" />
    <input type="hidden" name="sortDirection" value="@sortDirection" />

    <div class="row g-2 align-items-end">
        <div class="col-md-3">
            <label class="form-label small">Name</label>
            <input name="name" value="@filterName" class="form-control form-control-sm" />
        </div>
        <div class="col-md-3">
            <label class="form-label small">Description</label>
            <input name="description" value="@filterDescription" class="form-control form-control-sm" />
        </div>
        <div class="col-md-2">
            <label class="form-label small">Min Price</label>
            <input name="minPrice" value="@filterMinPrice" type="number" step="0.01" class="form-control form-control-sm" />
        </div>
        <div class="col-md-2">
            <label class="form-label small">Max Price</label>
            <input name="maxPrice" value="@filterMaxPrice" type="number" step="0.01" class="form-control form-control-sm" />
        </div>
        <div class="col-md-2 d-flex gap-2">
            <div>
                <label class="form-label small">Min Qty</label>
                <input name="minQuantity" value="@filterMinQuantity" type="number" step="1" class="form-control form-control-sm" />
            </div>
            <div>
                <label class="form-label small">Max Qty</label>
                <input name="maxQuantity" value="@filterMaxQuantity" type="number" step="1" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="col-md-2">
            <label class="form-label small">Active</label>
            <select name="isActive" class="form-select form-select-sm">
                <option value="" selected='@(string.IsNullOrEmpty(filterIsActive) ? "selected" : null)'>All</option>
                <option value="true" selected='@(filterIsActive == "true" ? "selected" : null)'>Yes</option>
                <option value="false" selected='@(filterIsActive == "false" ? "selected" : null)'>No</option>
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label small">Deleted</label>
            <select name="isDeleted" class="form-select form-select-sm">
                <option value="" selected='@(string.IsNullOrEmpty(filterIsDeleted) ? "selected" : null)'>All</option>
                <option value="true" selected='@(filterIsDeleted == "true" ? "selected" : null)'>Yes</option>
                <option value="false" selected='@(filterIsDeleted == "false" ? "selected" : null)'>No</option>
            </select>
        </div>

        <div class="col-12 mt-2">
            <button type="submit" class="btn btn-primary btn-sm">Filter</button>
            <a asp-action="Index" class="btn btn-secondary btn-sm ms-2">Clear</a>
        </div>
    </div>
</form>

@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-info">Brak produktów</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>
                        <a asp-action="Index"
                           asp-route-pageNumber="1"
                           asp-route-pageSize="@pageSize"
                           asp-route-sortColumn="Name"
                           asp-route-sortDirection="@(sortColumn == "Name" && sortDirection == "asc" ? "desc" : "asc")">
                            Name
                            @if (sortColumn == "Name")
                            {
                                <span> (@(sortDirection == "asc" ? "▲" : "▼"))</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-pageNumber="1"
                           asp-route-pageSize="@pageSize"
                           asp-route-sortColumn="Description"
                           asp-route-sortDirection="@(sortColumn == "Description" && sortDirection == "asc" ? "desc" : "asc")">
                            Description
                            @if (sortColumn == "Description")
                            {
                                <span> (@(sortDirection == "asc" ? "▲" : "▼"))</span>
                            }
                        </a>
                    </th>
                    <th class="text-end">
                        <a asp-action="Index"
                           asp-route-pageNumber="1"
                           asp-route-pageSize="@pageSize"
                           asp-route-sortColumn="Price"
                           asp-route-sortDirection="@(sortColumn == "Price" && sortDirection == "asc" ? "desc" : "asc")">
                            Price
                            @if (sortColumn == "Price")
                            {
                                <span> (@(sortDirection == "asc" ? "▲" : "▼"))</span>
                            }
                        </a>
                    </th>
                    <th class="text-end">
                        <a asp-action="Index"
                           asp-route-pageNumber="1"
                           asp-route-pageSize="@pageSize"
                           asp-route-sortColumn="Quantity"
                           asp-route-sortDirection="@(sortColumn == "Quantity" && sortDirection == "asc" ? "desc" : "asc")">
                            Quantity
                            @if (sortColumn == "Quantity")
                            {
                                <span> (@(sortDirection == "asc" ? "▲" : "▼"))</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-pageNumber="1"
                           asp-route-pageSize="@pageSize"
                           asp-route-sortColumn="IsActive"
                           asp-route-sortDirection="@(sortColumn == "IsActive" && sortDirection == "asc" ? "desc" : "asc")">
                            Active
                            @if (sortColumn == "IsActive")
                            {
                                <span> (@(sortDirection == "asc" ? "▲" : "▼"))</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-pageNumber="1"
                           asp-route-pageSize="@pageSize"
                           asp-route-sortColumn="CreatedAt"
                           asp-route-sortDirection="@(sortColumn == "CreatedAt" && sortDirection == "asc" ? "desc" : "asc")">
                            Created At
                            @if (sortColumn == "CreatedAt")
                            {
                                <span> (@(sortDirection == "asc" ? "▲" : "▼"))</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-pageNumber="1"
                           asp-route-pageSize="@pageSize"
                           asp-route-sortColumn="IsDeleted"
                           asp-route-sortDirection="@(sortColumn == "IsDeleted" && sortDirection == "asc" ? "desc" : "asc")">
                            Deleted
                            @if (sortColumn == "IsDeleted")
                            {
                                <span> (@(sortDirection == "asc" ? "▲" : "▼"))</span>
                            }
                        </a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td class="text-end">@item.Price.ToString("C")</td>
                        <td class="text-end">@item.StockQuantity</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">YES</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">NO</span>
                            }
                        </td>
                        <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>
                            @if (item.IsDeleted)
                            {
                                <span class="badge bg-success">YES</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">NO</span>
                            }
                        </td>
                        <td class="text-end">
                            <button type="button" class="btn btn-secondary openPopup" data-modalmode="edit" data-id="@item.Id">
                                Edit
                            </button>
                            <button type="button" class="btn btn-danger openPopup" data-modalmode="remove" data-id="@item.Id">
                                Remove
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            <small class="text-muted">Page @Model.PageNumber with @Model.TotalPages — @Model.TotalCount items</small>
        </div>
        <div>
            <nav aria-label="Pagination">
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-sortColumn="@sortColumn"
                           asp-route-sortDirection="@sortDirection"
                           asp-route-name="@filterName"
                           asp-route-description="@filterDescription"
                           asp-route-isActive="@filterIsActive"
                           asp-route-isDeleted="@filterIsDeleted"
                           asp-route-minQuantity="@filterMinQuantity"
                           asp-route-maxQuantity="@filterMaxQuantity"
                           asp-route-minPrice="@filterMinPrice"
                           asp-route-maxPrice="@filterMaxPrice">Previous</a>
                    </li>

                    @for (var p = 1; p <= Model.TotalPages; p++)
                    {
                        if (p == Model.PageNumber)
                        {
                            <li class="page-item active"><span class="page-link">@p</span></li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index"
                                   asp-route-pageNumber="@p"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-sortColumn="@sortColumn"
                                   asp-route-sortDirection="@sortDirection"
                                   asp-route-name="@filterName"
                                   asp-route-description="@filterDescription"
                                   asp-route-isActive="@filterIsActive"
                                   asp-route-isDeleted="@filterIsDeleted"
                                   asp-route-minQuantity="@filterMinQuantity"
                                   asp-route-maxQuantity="@filterMaxQuantity"
                                   asp-route-minPrice="@filterMinPrice"
                                   asp-route-maxPrice="@filterMaxPrice">@p</a>
                            </li>
                        }
                    }

                    <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-sortColumn="@sortColumn"
                           asp-route-sortDirection="@sortDirection"
                           asp-route-name="@filterName"
                           asp-route-description="@filterDescription"
                           asp-route-isActive="@filterIsActive"
                           asp-route-isDeleted="@filterIsDeleted"
                           asp-route-minQuantity="@filterMinQuantity"
                           asp-route-maxQuantity="@filterMaxQuantity"
                           asp-route-minPrice="@filterMinPrice"
                           asp-route-maxPrice="@filterMaxPrice">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}

<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="modalBody" class="modal-body">
                Ładowanie...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
